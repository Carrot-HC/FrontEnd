<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swc_data"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:layout_margin="5dp"
    android:background="@drawable/item_home_background"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/home_list_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_business_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_list_info_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:text="알타이 안전화 팝니다. 미사용"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/home_list_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_list_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:text="도봉제1동"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/home_list_img"
        app:layout_constraintTop_toBottomOf="@+id/home_list_info_tv" />

    <TextView
        android:id="@+id/home_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="."
        android:textColor="@color/gray"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/home_list_location_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:ellipsize="end"
        android:text="1분 전"
        android:layout_marginTop="6dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/home_list_location_tv"
        app:layout_constraintTop_toBottomOf="@+id/home_list_info_tv" />

    <TextView
        android:id="@+id/home_list_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:ellipsize="end"
        android:text="10,000원"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/home_list_img"
        app:layout_constraintTop_toBottomOf="@+id/home_list_location_tv" />

    <ImageView
        android:id="@+id/home_list_btn_like"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_heart"
        app:tint="@color/gray"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/home_list_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintStart_toEndOf="@+id/home_list_btn_like"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>